{
  "manifest_version": 2,
  "name": "Open in Brave",
  "version": "1.0",
  "description": "Open the current page in Brave browser.",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Open in Brave",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/mbb16.png",
    "48": "icons/mbb48.png",
    "128": "icons/mbb128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "config.json"
  ]
}
